pipeline {
    agent {
        node{
            label "docker-kj"
        }
    }
    tools {nodejs "nodejs 18.16.0"}
    stages {
        stage('CHECKOUT') {
            steps {
                git branch: 'main', url: "https://github.com/kjbriyan/simple-apps.git"
            }
        }
         stage('BUILD MODULE'){
            steps{
                sh '''cd app
                npm install''' 
            }
        }
         stage('UNIT TESTING'){
            steps{
                sh '''cd app
                npm test''' 
            }
        }
    }
}